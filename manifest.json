{
  "manifest_version": 3,
  "name": "Google Cookie Sync",
  "version": "0.3.0",
  "description": "Sync cookies between Chrome profiles.",
  "permissions": ["cookies", "storage", "alarms", "identity"],
  "host_permissions": ["https://*.google.com/*", "http://localhost:8765/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}
